<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">
        <i class="nav-icon fas fa fa-home" aria-hidden="true"></i>
        <span class="@NavLabelCssClass nav-label" aria-hidden="true">Tool Managment System</span>
    </a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
    
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <button class="@SideBarButtonCssClass" @onclick="ToggleSideBarMenu">
        <span class="navbar-toggler-icon">X</span>
    </button>
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="nav-icon fas fa fa-home" aria-hidden="true"></i>
                <span class="@NavLabelCssClass nav-label" aria-hidden="true">Home</span> 
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <i class="nav-icon fas fa fa-home" aria-hidden="true"></i>
                <span class="@NavLabelCssClass nav-label" aria-hidden="true">Counter</span>
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <i class="nav-icon fas fa fa-home" aria-hidden="true"></i>
                <span class="@NavLabelCssClass nav-label" aria-hidden="true">Fetch data</span>
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool collapseNavLable = false;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private string SideBarButtonCssClass => !collapseNavMenu ? "collapse" : null;
    private string NavLabelCssClass => collapseNavLable==true && collapseNavMenu==false ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
        collapseNavLable = false;
    }

    private void ToggleSideBarMenu()
    {
        collapseNavLable = !collapseNavLable;
    }
}
