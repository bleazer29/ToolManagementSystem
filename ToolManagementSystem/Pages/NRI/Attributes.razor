@page "/NRI/Attributes"
<div class="container">
    <div class="row">
        <div class="col-11">
            <h3>Attributes</h3>
        </div>
        <div class="col-1 pr-0">
            <button class="btn btn-primary w-100 pt-2 pb-2 fa fa-plus" type="button"
                    data-toggle="modal" data-target="#createModal"></button>
        </div>
    </div>
</div>

<div class="container">
    @* Search panel start *@
    <div class="row mb-3 mt-3">
        <div class="card w-100">
            <div class="card-header pt-0 pb-0">
                <h5 class="pt-2 pb-2">
                    Search
                    <a class="card-link float-right fa @Caret fa-lg" @onclick="ChangeCaret" data-toggle="collapse" href="#collapseOne">
                    </a>
                </h5>
            </div>
            <div id="collapseOne" class="collapse">
                <form class="m-3">
                    <div class="container-fluid">
                        <div class="row pt-2">
                            <div class="col-md-2 pt-1">
                                Title:
                            </div>
                            <div class="col pr-0">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="row pt-2">
                            <div class="col-md-2 pt-1">
                                Unit:
                            </div>
                            <div class="col pr-0">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="row d-flex flex-row-reverse pt-2 pb-2">
                            <button class="btn btn-primary">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @* Search panel end *@

    @* Table start *@
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width:15%;">Управление</th>
                                <th style="width:42%;">Наименование</th>
                                <th style="width:43%;">Единица измерения</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-left">
                                    <button class="btn btn-primary fa fa-edit" type="button"
                                            data-toggle="modal" data-target="#editModal"></button>
                                    <button class="btn btn-primary fa fa-times" type="button"
                                            data-toggle="modal" data-target="#deleteModal"></button>
                                </td>
                                <td class="text-left">Длина</td>
                                <td class="text-left">мм</td>
                            </tr>
                            <tr>
                                <td class="text-left">
                                    <button class="btn btn-primary fa fa-edit" type="button"
                                            data-toggle="modal" data-target="#editModal"></button>
                                    <button class="btn btn-primary fa fa-times" type="button"
                                            data-toggle="modal" data-target="#deleteModal"></button>
                                </td>
                                <td class="text-left">Вес</td>
                                <td class="text-left">кг</td>
                            </tr>
                            <tr>
                                <td class="text-left">
                                    <button class="btn btn-primary fa fa-edit" type="button"
                                            data-toggle="modal" data-target="#editModal"></button>
                                    <button class="btn btn-primary fa fa-times" type="button"
                                            data-toggle="modal" data-target="#deleteModal"></button>
                                </td>
                                <td class="text-left">Диаметр</td>
                                <td class="text-left">мм</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    @* Table end *@

    @*Modal Delete*@
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Deleting entry</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Do you really want to delete this entry?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary ">Accept</button>
                </div>
            </div>
        </div>
    </div>
    @*Modal Delete*@

    @*Modal Edit*@
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Editing entry</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="fa fa fa-times"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="container-fluid">
                            <div class="row pt-2">
                                <div class="col-md-2 pt-1">
                                    Title:
                                </div>
                                <div class="col pr-0">
                                    <input type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="row pt-2">
                                <div class="col-md-2 pt-1">
                                    Unit:
                                </div>
                                <div class="col pr-0">
                                    <input type="text" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
    @*Modal Edit*@

    @*Modal Create*@
    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Creating new entry</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="container-fluid">
                            <div class="container-fluid">
                                <div class="row pt-2">
                                    <div class="col-md-2 pt-1">
                                        Title:
                                    </div>
                                    <div class="col pr-0">
                                        <input type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row pt-2">
                                    <div class="col-md-2 pt-1">
                                        Unit:
                                    </div>
                                    <div class="col pr-0">
                                        <input type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary ">Save</button>
                </div>
            </div>
        </div>
    </div>
    @*Modal Create*@
</div>

@code {
    private bool isCaretUp = false;
    public string Caret => isCaretUp ? "fa-caret-down" : "fa-caret-up";

    public void ChangeCaret()
    {
        isCaretUp = !isCaretUp;
    }
}

