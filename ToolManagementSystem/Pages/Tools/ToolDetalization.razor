@code {
    [Parameter]
    public int ToolId { get; set; }

    bool isFirstRender = true;

    private bool isCaretUp = false;
    public string Caret => isCaretUp ? "fa-caret-down" : "fa-caret-up";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (isFirstRender)
        {
            await jsRunTime.InvokeVoidAsync("initDatePicker");
            await jsRunTime.InvokeVoidAsync("initTooltips");
        }
        isFirstRender = false;
    }

    public void ChangeCaret()
    {
        isCaretUp = !isCaretUp;
    }

    public async Task OnWeekPickerChange()
    {
        await jsRunTime.InvokeVoidAsync("dpChange");
    }
}
