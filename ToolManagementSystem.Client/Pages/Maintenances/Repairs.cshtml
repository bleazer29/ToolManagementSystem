@page "/Repairs/"
@model ToolManagementSystem.Client.Pages.Maintenances.RepairsModel
@{
    ViewData["Title"] = "Repairs";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-11 col-md-10 pl-0 pb-2 pb-md-0">
            <h3>Ремонт</h3>
        </div>
        <div class="col-lg-1 col-md-2 pr-0 pl-0">
            <button class="btn btn-primary w-100 pt-2 pb-2 fa fa-exchange-alt transfer-button" type="button"
                    data-toggle="modal" data-target="#createModal"></button>
        </div>
    </div>
</div>

<div class="container-fluid">
    @* Поиск panel start *@
    <div class="row mb-3 mt-3">
        <div class="card w-100">
            <div class="card-header pt-0 pb-0">
                <h5 class="pt-2 pb-2">
                    Поиск
                    <a class="card-link float-right fa CaretMain fa-caret-down fa-lg" onclick="ChangeCaretMain()" data-toggle="collapse" href="#mainCollapse">
                    </a>
                </h5>
            </div>
            <div id="mainCollapse" class="collapse">
                <form class="m-3">
                    <div class="container-fluid">
                        <div class="row pt-2">
                            <div class="col-md-5 col-lg-4 pt-1 pl-0">
                                Период:
                            </div>
                            <div class="col pr-0 pl-0 pl-md-1 pb-2 pb-lg-0">
                                <input type="date" class="form-control " />
                            </div>
                            <div class="w-100 d-md-none "></div>
                            <div class="col pr-0 pl-0 pl-md-1 pb-2 pb-lg-0">
                                <input type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="row pt-2 align-items-center">
                            <div class="col-md-5 col-lg-4 pt-1 pl-0">
                                Наименование:
                            </div>
                            <div class="col pr-0 pl-0 pl-md-1">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="row pt-2">
                            <div class="col-md-5 col-lg-4 pt-1 pl-0">
                                Подразделение:
                            </div>
                            <div class="col pr-0 pl-0 pl-md-1">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="row pt-2 align-items-center">
                            <div class="col-md-5 col-lg-4 pt-1 pl-0">
                                Артикул:
                            </div>
                            <div class="col pr-0 pl-0 pl-md-1">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="row pt-2 align-items-center">
                            <div class="col-md-5 col-lg-4 pt-1 pl-0">
                                Серийный номер:
                            </div>
                            <div class="col pr-0 pl-0 pl-md-1">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="row pt-2 align-items-center">
                            <div class="col-md-5 col-lg-4 pt-1 pl-0">
                                Заказной номер:
                            </div>
                            <div class="col pr-0 pl-0 pl-md-1">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="row pt-2 align-items-center">
                            <div class="col-md-5 col-lg-4 pt-1 pl-0">
                                Класификация:
                            </div>
                            <div class="col pr-0 pl-0 pl-md-1">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="row d-flex flex-row-reverse pt-2 pb-2">
                            <button class="btn btn-primary">
                                <span aria-hidden="true" class="fa fa fa-search"></span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @* Поиск panel end *@

    @* Table start *@
    <div class="row">
        <div class="container-fluid">
            <div class="row">
                <div class="table-responsive scrollable">
                    <table class="table  table-bordered table-hover text-nowrap css-numbered-rows-col-2">
                        <thead>
                            <tr>
                                <th></th>
                                <th style="width:5%">#</th>

                                <th>Дата начала ремонта</th>
