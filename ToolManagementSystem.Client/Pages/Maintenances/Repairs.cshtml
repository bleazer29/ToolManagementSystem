                                <td>Инструмент1</td>
                                <td>Подразделение1</td>
                                <td>14566433</td>
                                <td>14566433</td>
                                <td>35669874</td>
                                <td>Вид1 -> Тип2</td>
                                <td>1</td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="checkbox" class="form-check" />
                                </td>
                                <td></td>


                                <td>12.05.2020</td>
                                <td>14.05.2020</td>
                                <td>Инструмент2</td>
                                <td>Подразделение1</td>
                                <td>14566433</td>
                                <td>14566433</td>
                                <td>35669874</td>
                                <td>Вид1 -> Тип2</td>
                                <td>1</td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="checkbox" class="form-check" />
                                </td>

                                <td></td>

                                <td>12.05.2020</td>
                                <td>14.05.2020</td>
                                <td>Инструмент3</td>
                                <td>Подразделение1</td>
                                <td>14566433</td>
                                <td>14566433</td>
                                <td>35669874</td>
                                <td>Вид1 -> Тип2</td>
                                <td>1</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    @* Table end *@


    @*Modal Create*@
    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Отослать на сервисное обслуживание</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group row align-items-center">
                            <label for="unitTitle" class="col col-md-5 col-lg-4 col-form-label mb-2"> Номер:</label>
                            <div class="w-100 d-md-none"></div>
                            <div class="col  mb-2">
                                <input type="text" class="form-control" id="unitTitle">
                            </div>
                        </div>
                        <div class="form-group row align-items-center">
                            <label for="unitTitle" class="col col-md-5 col-lg-4 col-form-label mb-2"> Дата начала:</label>
                            <div class="w-100 d-md-none"></div>
                            <div class="col  mb-2">
                                <input type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row align-items-center">
                            <label for="unitTitle" class="col col-md-5 col-lg-4 col-form-label mb-2"> Рассчётная дата конца:</label>
                            <div class="w-100 d-md-none"></div>
                            <div class="col mb-2">
                                <input type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row align-items-center">
                            <label for="unitTitle" class="col col-md-5 col-lg-4 col-form-label mb-2"> Фактическая дата конца:</label>
                            <div class="w-100 d-md-none"></div>
                            <div class="col  mb-2">
                                <input type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row align-items-center">
                            <label for="unitTitle" class="col col-md-5 col-lg-4 col-form-label mb-2"> Ответственный:</label>
                            <div class="w-100 d-md-none"></div>
                            <div class="col  mb-2">
                                <input type="text" class="form-control" id="unitTitle">
                            </div>
                        </div>    
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    <button type="button" class="btn btn-primary">Сохранить</button>
                </div>



            </div>
        </div>
    </div>
    @*Modal Create*@
</div>

@section Scripts {
    <script type="text/javascript">
        var isCaretMainUp = false;
        var isCaretTransferUp = false;
      
        function ChangeCaretMain() {
            isCaretMainUp = !isCaretMainUp;
            if (isCaretMainUp == true) {
                $(".CaretMain").removeClass("fa-caret-down");
                $(".CaretMain").addClass("fa-caret-up");
            }
            else {
                $(".CaretMain").removeClass("fa-caret-up");
                $(".CaretMain").addClass("fa-caret-down");
            }
        };

        function ChangeCaretTransfer() {
            isCaretTransferUp = !isCaretTransferUp;
            if (isCaretTransferUp == true) {
                $(".CaretTransfer").removeClass("fa-caret-down");
                $(".CaretTransfer").addClass("fa-caret-up");
            }
            else {
                $(".CaretTransfer").removeClass("fa-caret-up");
                $(".CaretTransfer").addClass("fa-caret-down");
            }
        };

    </script>
}



