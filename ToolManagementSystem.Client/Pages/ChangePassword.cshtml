@page "/ChangePassword"
@model WebApplication1.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "ChangePassword";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-12 pl-0 pb-2 pb-md-0">
            <h3>Изменение пароля</h3>
        </div>
    </div>
</div>

<div class="container-fluid">
    <form>
        <div class="form-group row align-items-center">
            <label for="statusTitle" class="col col-md-4 col-lg-3 col-form-label mb-2"> Текущий пароль:</label>
            <div class="w-100 d-md-none"></div>
            <div class="col col-md-8 col-lg-9 mb-2">
                <input type="text" class="form-control" id="statusTitle">
            </div>
        </div>
        <div class="form-group row align-items-center">
            <label for="unitTitle" class="col col-md-4 col-lg-3 col-form-label mb-2"> Новый пароль:</label>
            <div class="w-100 d-md-none"></div>
            <div class="col col-md-8 col-lg-9 mb-2">
                <input type="password" class="form-control" />
            </div>
        </div>
        <div class="form-group row align-items-center">
            <label for="unitTitle" class="col col-md-4 col-lg-3 col-form-label mb-2"> Подтвердите новый пароль:</label>
            <div class="w-100 d-md-none"></div>
            <div class="col col-md-8 col-lg-9 mb-2">
                <input type="password" class="form-control" />
            </div>
        </div>
        <div class="form-group row align-items-center">
            <div class="col justify-content-end">
                <a type="button" class="btn btn-secondary float-right m-1" href="/Index">Отмена</a>
                <button type="button" class="btn btn-primary float-right m-1">Сохранить</button>
            </div>
        </div>
    </form>
</div>

