@page "/"
@model ToolManagementSystem.Client.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>ToolManagementSystem</title>
    <link href="css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="css/site.css" rel="stylesheet" />
</head>

<body>
    <main class="main-login">
        <div class="login-heading">
            <h1>
                <img src="images/Weatherford_logo.png" class="img-fluid">
                Weatherford
            </h1>
            <h2>Авторизация в системе</h2>
        </div>
        <div class="form-pos login-form-pos">
            <form method="post">
                <div class="form-group row">
                    <label class="control-label">Логин</label>
                    <input type="text" required class="form-control"  asp-for="Login"/>
                    <div class="invalid-feedback">text</div>
                </div>
                <div class="form-group row">
                    <label class="control-label">Пароль</label>
                    <input type="password" required class="form-control" asp-for="Password"/>
                    <div class="invalid-feedback">Неверный пароль!</div>
                </div>
                <div class="main-login__columns row">
                    <div class="custom-control custom-checkbox ml-3">
                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                        <label class="custom-control-label" for="customCheck1">Запомнить</label>
                    </div>
                    <!-- <a href="#">Забыли пароль?</a> -->
                </div>
                <div class="row justify-content-center">
                    <button type="submit" class="btn btn-primary mt-1 text-center w-auto" asp-page-handler="Login">Войти</button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>


