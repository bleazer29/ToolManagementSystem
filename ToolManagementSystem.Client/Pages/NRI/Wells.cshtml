                <label for="unitTitle" class="col col-md-4 col-lg-3 col-form-label mb-2"> Контрагент:</label>
                <div class="w-100 d-md-none"></div>
                <div class="col col-md-8 col-lg-9 mb-2">
                    <select class="form-control">
                        <option selected="selected">Контрагент 1</option>
                        <option>Контрагент 2</option>
                        <option>Контрагент 3</option>
                    </select>
                </div>
            </div>*@

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                        <button type="submit" class="btn btn-primary" asp-page-handler="Create">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @*Modal Create*@
</div>

@section Scripts {
    <script type="text/javascript">
        var isCaretUp = false;
        var pagedList = "#wellsTable";
        var filterByNameStr = "";
        var filterByWellNumberStr = "";
        var filterByAddressStr = "";
        var sortField = "Name";
        var itemsOnPage = 5;
        var isAscendingSort = true;
        GenList(pagedList, itemsOnPage);
        EnableDeleteButton();
        EnableEditButton();

        $(pagedList + " th a").click(function (e) {
            e.preventDefault();
            $(pagedList + " th").removeClass("sort-asc sort-desc");
            if (sortField == $(this).attr("data-sort")) {
                isAscendingSort = !isAscendingSort;
            }
            else {
                isAscendingSort = true;
            }
            if (isAscendingSort == true) {
                $(this).parent().addClass("sort-asc");
            }
            else {
                $(this).parent().addClass("sort-desc");
            }
            sortField = $(this).attr("data-sort");
            hubConnection.invoke('GetWells', filterByNameStr, filterByAddressStr, filterByWellNumberStr, sortField, isAscendingSort);
        });

        function EnableDeleteButton() {
            $(".delete-button").click(function () {
                var wellId = $(this).data('wellid');
                $('#DeleteWellId').val(wellId);
            });
        };

        function EnableEditButton() {
            $('.edit-button').click(function () {
                var wellId = $(this).data('wellid');
                hubConnection.invoke('GetEditedWell', wellId);
            });
        };

        $('#filterByName').change(function () {
            filterByNameStr = $("#filterByName").val();
        });
        $('#filterByWellNumber').change(function () {
            filterByWellNumberStr = $("#filterByWellNumber").val();
        });
        $('#filterByAddress').change(function () {
            filterByAddressStr = $("#filterByAddress").val();
        });

        $('#search-button').click(function () {
            hubConnection.invoke('GetWells', filterByNameStr, filterByAddressStr, filterByWellNumberStr, sortField, isAscendingSort);
        });

        const hubConnection = new signalR.HubConnectionBuilder()
            .withUrl("/data")
            .build();

        hubConnection.on("recieveEditedWell", function (data) {
            var json = JSON.parse(data);
            $('#EditWell_Name').val(json.Name);
            $('#EditWell_WellId').val(json.WellId);
            $('#EditWell_Address').val(json.Address);
            $('#EditWell_WellNumber').val(json.WellNumber);
        });

        hubConnection.on("recieveWells", function (data) {
            var json = JSON.parse(data);
            $(pagedList + " tbody").empty();
            for (let i = 0; i < json.length; i++) {
                $(pagedList + " tbody").append(
                    "<tr>"
                    + "<td></td>"
                    + "<td>" + json[i].Name + "</td>"
                     + "<td>" + json[i].WellNumber + "</td>"
                    + "<td>" + json[i].Address + "</td>"
                    + "<td class='align-middle'>"
                    + "<div class='table-control-buttons-row'>"
                    + "<button class='btn btn-primary fa fa-edit edit-button' type='button'"
                    + "data-toggle='modal' data-target='#editModal' data-wellid='" + json[i].WellId + "'></button>"
                    + "<button class='btn btn-primary fa fa-trash-alt delete-button' type='button'"
                    + "data-toggle='modal' data-target='#deleteModal' data-wellid='" + json[i].WellId + "'></button>"
                    + "</div>"
                    + "</td>"
                    + "</tr>"
                );
            }
            GenList(pagedList, itemsOnPage);
            EnableEditButton();
            EnableDeleteButton();
        });

        hubConnection.start();

        function ChangeCaret() {
            isCaretUp = !isCaretUp;
            if (isCaretUp == true) {
                $(".Caret").removeClass("fa-caret-down");
                $(".Caret").addClass("fa-caret-up");
            }
            else {
                $(".Caret").removeClass("fa-caret-up");
                $(".Caret").addClass("fa-caret-down");
            }
        };

    </script>
}



