@section Scripts {
    <script type="text/javascript">
        var isCaretUp = false;
        var AttributeCounter = 0;

        var isCaretUp = false;
        var pagedList = "#nomenclaturesTable";
        var filterByNameStr = "";
        var sortField = "Name";
        var itemsOnPage = 5;
        var isAscendingSort = true;
        GenList(pagedList, itemsOnPage);
        EnableDeleteButton();
        EnableEditButton();

        $(pagedList + " th a").click(function (e) {
            e.preventDefault();
            $(pagedList + " th").removeClass("sort-asc sort-desc");
            if (sortField == $(this).attr("data-sort")) {
                isAscendingSort = !isAscendingSort;
            }
            else {
                isAscendingSort = true;
            }
            if (isAscendingSort == true) {
                $(this).parent().addClass("sort-asc");
            }
            else {
                $(this).parent().addClass("sort-desc");
            }
            sortField = $(this).attr("data-sort");
            hubConnection.invoke('GetNomenclatures', filterByNameStr, sortField, isAscendingSort);
        });

        function EnableDeleteButton() {
            $(".delete-button").click(function () {
                var nomenclatureId = $(this).data('nomenclatureid');
                $('#DeleteNomenclatureId').val(nomenclatureId);
            });
        };

        function EnableEditButton() {
            $('.edit-button').click(function () {
                var nomenclatureId = $(this).data('nomenclatureid');
                hubConnection.invoke('GetEditedNomenclature', nomenclatureId);
            });
        };

        $('#filterByName').change(function () {
            filterByNameStr = $("#filterByName").val();
        });

        $('#search-button').click(function () {
            hubConnection.invoke('GetNomenclatures', filterByNameStr, sortField, isAscendingSort);
        });

        const hubConnection = new signalR.HubConnectionBuilder()
            .withUrl("/data")
            .build();

        hubConnection.on("recieveEditedNomenclature", function (data) {
            var json = JSON.parse(data);
            $('#EditNomenclature_Name').val(json.Name);
            $('#EditNomenclature_NomenclatureId').val(json.NomenclatureId);
        });

        function getTimeSpan(ticks) {
            var d = new Date(ticks);
            return {
                
                hour: d.getUTCHours(),
                minute: d.getMinutes(),
                second: d.getSeconds()
            }
        }

        hubConnection.on("recieveNomenclatures", function (data) {
            var json = JSON.parse(data);
            $(pagedList + " tbody").empty();
            var attributes = "";
            for (let i = 0; i < json.length; i++) {
                attributes = "";
                if (json[i].NomenclatureSpecificationUnit != null) {
                    for (var j = 0; j < json[i].NomenclatureSpecificationUnit.length;j++){
                        if (json[i].NomenclatureSpecificationUnit[j].Unit != null) attributes += json[i].NomenclatureSpecificationUnit[j].Specification.Name + "<span>-</span>" + json[i].NomenclatureSpecificationUnit[j].value + " " + json[i].NomenclatureSpecificationUnit[j].Unit.Name + "<br/>";
                        else attributes += json[i].NomenclatureSpecificationUnit[j].Specification.Name + "<span>-</span>" + json[i].NomenclatureSpecificationUnit[j].value + "<br/>";
                    }
                }
                $(pagedList + " tbody").append(
                    "<tr>"
                    + "<td></td>"
                    + "<td>" + json[i].Name + "</td>"
                    + "<td>" + json[i].VendorCode + "</td>"
                    + "<td>" + getTimeSpan(json[i].MaxOperatingTime) + "</td>"
                    + "<td>" + attributes + "</td>"
                    + "<td class='align-middle'>"
                    + "<div class='table-control-buttons-row'>"
                    + "<button class='btn btn-primary fa fa-edit edit-button' type='button'"
                    + "data-toggle='modal' data-target='#editModal' data-nomenclatureid='" + json[i].NomenclatureId + "'></button>"
                    + "<button class='btn btn-primary fa fa-trash-alt delete-button' type='button'"
                    + "data-toggle='modal' data-target='#deleteModal' data-nomenclatureid='" + json[i].NomenclatureId + "'></button>"
                    + "</div>"
                    + "</td>"
                    + "</tr>"
                );
            }
            GenList(pagedList, itemsOnPage);
            EnableEditButton();
            EnableDeleteButton();
        });

        hubConnection.start();

        function ChangeCaret() {
            isCaretUp = !isCaretUp;
            if (isCaretUp == true) {
                $(".Caret").removeClass("fa-caret-down");
                $(".Caret").addClass("fa-caret-up");
            }
            else {
                $(".Caret").removeClass("fa-caret-up");
                $(".Caret").addClass("fa-caret-down");
            }

        };

        function IncrementCount() {
            AttributeCounter++;
        };

        function AddClassificationRow(tBodyName) {
            var tBodyElem = '#' + tBodyName;
            $(tBodyElem).append(
                "<tr id='classification-row-" + AttributeCounter + "'><td class= 'text-left'></td>"
                + "<td class='text-left'><select class='form-control'><option selected = 'selected'> Длина</option><option>Ширина</option><option>Вес</option></select></td>"
                + "<td class='text-left'><select class='form-control'><option selected = 'selected'> м</option><option>см</option><option>кг</option></select></td>"
                + "<td class='text-left'><input class='form-control'/></td>"
                + "<td class= 'text-left'>"
                + "<button id='classification-row_button-" + AttributeCounter + "' onclick='RemoveTableRow(this.id)' class='btn btn-primary fa fa-minus w-100' type='button'></button>"
                + "</td >"
                + "</tr>"
            );
            IncrementCount();
        };

        function ClearClassificationTable(tBodyName) {
            ClearTable(tBodyName);
            AttributeCounter = 1;
        };

    </script>
}





